# PostgreSQL Database Configuration
POSTGRES_DB=volo_db
POSTGRES_USER=volo_user
POSTGRES_PASSWORD=volo_password
PGDATA=/var/lib/postgresql/data/pgdata

# Database Connection for Scripts
DB_HOST=postgres
DB_PORT=5432
DB_NAME=volo_db
DB_USER=volo_user
DB_PASSWORD=volo_password

# FastAPI Backend Configuration
DATABASE_URL=postgresql://volo_user:volo_password@postgres:5432/volo_db
PYTHONPATH=/app

# API Configuration for Scripts
API_BASE_URL=http://fastapi:8000

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@volo.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False
